{
    "name": "@adguard/filters-downloader",
    "version": "1.1.20",
    "description": "Compiles filters source files",
    "main": "./src/index.js",
    "typings": "./src/index.d.ts",
    "exports": {
        ".": "./src/index.js",
        "./browser": "./src/index.browser.js"
    },
    "typesVersions": {
        "*": {
            "browser": [
                "src/index.d.ts"
            ]
        }
    },
    "scripts": {
        "build": "node scripts/build-txt.js",
        "test": "node __tests__/testrunner.js",
        "lint": "eslint .",
        "lint-staged": "lint-staged",
        "prepare": "husky install",
        "increment": "yarn version --patch --no-git-tag-version"
    },
    "lint-staged": {
        "{src,scripts,__tests__}/**/*.js": [
            "eslint"
        ]
    },
    "author": "AdGuard",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AdguardTeam/FiltersDownloader.git"
    },
    "bugs": {
        "url": "https://github.com/AdguardTeam/FiltersDownloader/issues"
    },
    "homepage": "https://github.com/AdguardTeam/FiltersDownloader#readme",
    "dependencies": {
        "axios": "^0.21.1"
    },
    "devDependencies": {
        "eslint": "^8.50.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.28.1",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "node-qunit": "^2.0.0"
    }
}
